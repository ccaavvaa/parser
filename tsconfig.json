{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./",
        "newLine": "CRLF",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "rootDirs": [
            "src"
        ]
    },
    "exclude": [],
    "include": [
        "src/lib/**/*.ts",
        "src/test/**/*.ts"
    ]
}